#!/bin/bash
echo "Updating resources ..."

function makeFrame() {
FILE=$SVG_DIRECTORY/$1.svg
TARGET=$RESOURCES/$1.pdc

echo "Processing Frame $FILE ..." 
./DrawCommands/SVG_to_PDC -p $FILE -o $TARGET
echo -e "\n" 
}


function makeSequence() {
DIRECTORY=$SVG_DIRECTORY/$1
TARGET=$RESOURCES/$1.pdc

echo "Processing Sequence directory $DIRECTORY ..." 
./DrawCommands/SVG_to_PDC -p -s $DIRECTORY -o $TARGET
echo -e "\n" 
}

SVG_DIRECTORY=Design
RESOURCES=resources/data

makeFrame Heart
makeFrame Phone
makeFrame isLinked
makeFrame isNotLinked
makeFrame Battery
makeSequence Levels
makeFrame Chrono
makeSequence Elapsed
makeFrame CallsMissed
makeFrame MessagesMissed
makeFrame Thermometer

